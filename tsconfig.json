{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "paths": {
    "@reastic/components": ["./packages/restic-components/src"],
    "@reastic/components/*": ["./packages/restic-components/src/*"],

    "@reastic/admin": ["./packages/restic-admin/src/*"],
    "@reastic/admin/*": ["./packages/restic-admin/src/*"]
  },
  "include": ["src"],
  "exclude": ["**/build/"]
}
